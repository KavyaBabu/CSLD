import { useEffect, useRef, useState } from "react";
import { Page } from "@arqiva/react-component-lib";
import QueryParamsUrlProvider from "@/app/_components/QueryParamsUrlProvider";
import DashboardInner, { DashboardFilters } from "./Inner";
import LeakageListPage from "./widgets/leakageList/page";
import styles from "./index.module.css";

const DashboardPage = () => {
  const [dashboardFilters, setDashboardFilters] = useState<DashboardFilters>({});
  const [mounted, setMounted] = useState(false);
  const [filtersOpen, setFiltersOpen] = useState(true);
  const contentRef = useRef<HTMLDivElement>(null);

  useEffect(() => setMounted(true), []);

  // Collapse filters when scrolling down
  useEffect(() => {
    const handleScroll = () => {
      const scrolled = window.scrollY > 40;
      setFiltersOpen(!scrolled);
    };
    window.addEventListener("scroll", handleScroll);
    return () => window.removeEventListener("scroll", handleScroll);
  }, []);

  if (!mounted) return null;

  return (
    <Page.Root>
      <QueryParamsUrlProvider initialParams={{}}>
        <div className={styles.dashboardContainer}>
          <div className={styles.filtersBarSticky} ref={contentRef}>
            <div className={styles.filtersHeader}>
              <h1 className={styles.dashboardTitle}>Dashboard</h1>
              <button
                className={styles.filtersToggle}
                onClick={() => setFiltersOpen(!filtersOpen)}
                aria-label={filtersOpen ? "Hide filters" : "Show filters"}
              >
                {filtersOpen ? "▲ Hide filters" : "▼ Show filters"}
              </button>
            </div>
            {filtersOpen && (
              <DashboardInner.FiltersBar
                onFiltersChange={setDashboardFilters}
              />
            )}
          </div>
          {/* main content */}
          <div className={styles.contentWrapper}>
            <DashboardInner.Content />
            <div className={styles.dashboardSection}>
              <h2 className={styles.sectionHeading}>Leakage List</h2>
              <LeakageListPage dashboardFilters={dashboardFilters} />
            </div>
          </div>
        </div>
      </QueryParamsUrlProvider>
    </Page.Root>
  );
};

export default DashboardPage;



/* Container for main content and filters bar */
.dashboardContainer {
  position: relative;
  width: 100%;
  min-height: 100vh;
}

/* Sticky bar inside the content panel */
.filtersBarSticky {
  position: sticky;
  top: 0;
  z-index: 20;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
  padding: 1.5rem 2rem;
  border-radius: 1.5rem;
  margin-bottom: 1.5rem;
}

/* Filters header with title and toggle */
.filtersHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Optional title styling */
.dashboardTitle {
  font-size: 2rem;
  font-weight: 700;
  margin: 0;
}

/* “Show/Hide filters” button */
.filtersToggle {
  background: none;
  border: none;
  color: #2563eb;
  font-weight: 600;
  cursor: pointer;
  padding: 0;
}

.contentWrapper {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.sectionHeading {
  margin-top: 3rem;
  font-size: 1.25rem;
  font-weight: 600;
}
