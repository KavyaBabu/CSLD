const DashboardPage = () => {
  const [dashboardFilters, setDashboardFilters] = useState<DashboardFilters>({});
  const [mounted, setMounted] = useState(false);
  const [filtersOpen, setFiltersOpen] = useState(true);

  useEffect(() => setMounted(true), []);
  if (!mounted) return null;

  return (
    <Page.Root>
      <QueryParamsUrlProvider initialParams={{}}>
        <div className={styles.dashboardContainer}>
          <div className={styles.contentWrapper}>
            {/* Sticky header + filters */}
            <header className={styles.stickyHeader}>
              <div className={styles.headerTopRow}>
                <h1 className={styles.dashboardTitle}>Dashboard</h1>

                <button
                  className={styles.filtersToggle}
                  onClick={() => setFiltersOpen(!filtersOpen)}
                  aria-label={filtersOpen ? "Hide filters" : "Show filters"}
                >
                  {filtersOpen ? "Hide filters" : "Show filters"}
                </button>
              </div>

              {filtersOpen && (
                <div className={styles.filtersRow}>
                  <DashboardInner.FiltersBar
                    onFiltersChange={setDashboardFilters}
                  />
                </div>
              )}
            </header>

            {/* main content */}
            <main className={styles.mainContent}>
              <DashboardInner.Content />
              <section className={styles.dashboardSection}>
                <h2 className={styles.sectionHeading}>Leakage List</h2>
                <LeakageListPage dashboardFilters={dashboardFilters} />
              </section>
            </main>
          </div>
        </div>
      </QueryParamsUrlProvider>
    </Page.Root>
  );
};

.dashboardContainer {
  position: relative;
  width: 100%;
  min-height: 100vh;
}

/* main column (already offset from sidebar by the app shell) */
.contentWrapper {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 1.5rem 2rem 3rem;
}

/* Sticky header + filters */
.stickyHeader {
  position: sticky;
  top: 0; /* or match app-shell header height if you have one */
  z-index: 20;
  padding: 1rem 0 1.25rem;
  background: #ffffff;
  border-bottom: 1px solid rgba(15, 23, 42, 0.06);
}

/* Title + toggle in one row */
.headerTopRow {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
}

/* Dashboard title */
.dashboardTitle {
  font-size: 2rem;
  font-weight: 700;
  margin: 0;
}

/* Filters row directly under the header */
.filtersRow {
  margin-top: 1rem;
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
}

/* Simple text-button style */
.filtersToggle {
  border: 1px solid rgba(37, 99, 235, 0.2);
  background: #eff6ff;
  border-radius: 999px;
  padding: 0.4rem 0.9rem;
  font-size: 0.875rem;
  font-weight: 500;
  color: #1d4ed8;
  cursor: pointer;
}

/* Main content under header */
.mainContent {
  padding-top: 1.5rem;
}

.sectionHeading {
  margin-top: 3rem;
  font-size: 1.25rem;
  font-weight: 600;
}


